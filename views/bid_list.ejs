<%- include user_header.ejs %>

<div class="row row-style">
    <div class="col-md-8 position-2">
        <a href="/user_index">首页</a>
        <span>
          &nbsp;/&nbsp;竞价列表
        </span>
    </div>
</div>

<div class="box-2">
    <div class="modal-header" style="background:#F5F5F5">
        <div class="left h4-1">
            竞价列表
        </div>
        <div class="right">
            <a href="/sign_up_list?activity_name=nnnn">报名列表</a>
        </div>
        <br>
    </div>
    <table class="table table-striped">
        <thead>
        <tr class="bold">
            <td>编号</td>
            <td>名称</td>
            <td>参与人数</td>
        </tr>
        </thead>
        <tbody>
        <% var num=0;bid_list_infos.forEach(function(bid_list_info){num++%>
        <tr>
            <td>
                <%= num%>
            </td>
            <td>
                <a href="/bid_detail?present_bid_name=%E7%AB%9E%E4%BB%B71"><%= bid_list_info.bid_name%></a>
            </td>
            <td>
                <%= bid_list_info.bid_apply_num%>
                /
                <%= sign_ups_num%>
            </td>
        </tr>
        <% })%>
        </tbody>
    </table>
    <div class="modal-footer"></div>
</div>
<%- include footer.ejs %>
